<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ro.scoaladevalori.cegeka.wardrop">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_wardrop"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_wardrop"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddClothesActivity" />
        <activity
            android:name=".MyClothesActivity"
            android:label="@string/title_activity_my_clothes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BuildOutfitActivity" />
        <activity
            android:name=".SelectClothesActivity"
            android:label="@string/title_activity_select_clothes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
